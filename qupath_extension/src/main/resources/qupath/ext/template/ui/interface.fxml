<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SpinnerValueFactory?>

<fx:root type="VBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1">   
	<Button fx:id="loadImageButton" text="Load HE Image" onAction="#handleLoadImage"/>
	<Button fx:id="convertButton" text="Transfer to IHC" onAction="#handleConvertImage"/>
    <HBox spacing="10">
        <VBox>
            <ImageView fx:id="heImageView" fitHeight="300" fitWidth="300" preserveRatio="true"/>
        </VBox>
        <VBox>
            <ImageView fx:id="ihcImageView" fitHeight="300" fitWidth="300" preserveRatio="true"/>
        </VBox>
    </HBox><Spinner fx:id="threadSpinner" />
</fx:root>
